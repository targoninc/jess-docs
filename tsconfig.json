{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ESNext", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
